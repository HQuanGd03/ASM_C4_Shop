@model IEnumerable<ASM_C4_Shop.Models.Brand>

@{
    ViewData["Title"] = "ShowAllBrand";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>ShowAllBrand</h1>

<p>
    <a asp-action="CreateBrand">Thêm Mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                    @Html.ActionLink("Sửa", "EditBrand", new { id = item.Id }) |
                    @Html.ActionLink("Chi Tiết", "DetailBrand", new { id = item.Id }) |
                    @Html.ActionLink("Xóa", "DeleteBrand", new { id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
