@model IEnumerable<ASM_C4_Shop.Models.Product>

@{
    ViewData["Title"] = "ShowAllProduct";
    ASM_C4_Shop.Models.ShopDbContext db = new ASM_C4_Shop.Models.ShopDbContext();
}

<h1>ShowAllProduct</h1>

<p>
    <a asp-action="CreateProduct">Thêm Mới</a>
</p>
<table class="table">
    <table class="table">
    <thead>
        <tr>
                @*<th>
                @Html.DisplayNameFor(model => model.Id)
            </th>*@
            <th>
                    @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.LinkAnh)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.AvailableQuantity)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.Supplier)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.BrandId)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.ColorId)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.SizeId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                        @*@Html.DisplayFor(modelItem => item.Id)*@
                </td>
                <td>
                        @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                       <img src="@item.LinkAnh" style="width: 100px; height: 100px;"/>
                </td>
                <td>
                        @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                        @Html.DisplayFor(modelItem => item.AvailableQuantity)
                </td>
                <td>
                        @if (item.Status == 0)
                        {
                                    <span>Còn Hàng</span>
                        }
                        else
                        {
                                    <span>Hết Hàng</span>
                        }
                </td>
                <td>
                        @Html.DisplayFor(modelItem => item.Supplier)
                </td>
                <td>
                        @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                        @Html.DisplayFor(modelItem => item.BrandId)
                </td>
                <td>
                        @Html.DisplayFor(modelItem => item.ColorId)
                </td>
                <td>
                        @{   
                            ASM_C4_Shop.Models.Size size = db.Sizes.Find(item.SizeId);
                            if (size != null)
                            {
                                        <span>@size.Kichthuoc</span>
                            }
                            else
                            {
                                        <span>Unknown</span>
                            }
                        }
                </td>
                <td>
                        @Html.ActionLink("Sửa", "EditProduct", new {id = item.Id }) |
                        @Html.ActionLink("Chi Tiết", "DetailProduct", new { id = item.Id }) |
                        @Html.ActionLink("Xóa", "DeleteProduct", new { id = item.Id })
                </td>
            </tr>
            }
    </tbody>
</table>
