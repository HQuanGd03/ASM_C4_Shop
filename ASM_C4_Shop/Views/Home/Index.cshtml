@model IEnumerable<ASM_C4_Shop.Models.Product>

@{
    ViewData["Title"] = "Home Page";
}


<header class="py-5">
    <div class="container px-lg-5">
        <div class="p-4 p-lg-5 bg-light rounded-3 text-center">
            <div class="m-4 m-lg-5">
                <h1 class="display-5 fw-bold">A warm welcome!</h1>
                <p class="fs-4">Bootstrap utility classes are used to create this jumbotron since the old component has been removed from the framework. Why create custom CSS when you can use utilities?</p>
                <a class="btn btn-primary btn-lg" href="#!">Call to action</a>
            </div>
        </div>
    </div>
</header
@foreach (var item in Model){
        <div class=card>
                <h3 class="card-header">@item.Name</h3>
                <div class="card-body" style="height: 150px;">
                    @item.Description
                </div>
                <div class="card-footer">
                    <span class="text-muted">@(item.Price.ToString("n0")) VND</span>    
                    <a asp-route="addcart" 
                        asp-route-productid="@item.Id"
                        class="btn btn-secondary btn-sm float-right">Đặt hàng
                    </a>
                </div>
        </div>
}

